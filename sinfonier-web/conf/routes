# Projects
GET /projects/add                                               Projects.add
GET /projects/edit                                              Projects.edit
GET /projects/?                                                 Projects.index(page:'1')
GET /projects/0                                                 Projects.index(page:'1')
GET /projects/{<-?[0-9]+>page}                                  Projects.index
GET /projects/search/?                                          Projects.search(page:'1')
GET /projects/search/0                                          Projects.search(page:'1')
POST /projects                                                  Projects.create
PUT /projects/{id}                                              Projects.save
PUT /projects/save                                              Projects.save
GET /projects/{name}                                            Projects.show
POST /projects/{id}/activate                                    Projects.activate
POST /projects/deactivate                                       Projects.deactivate

# Diagnostig
GET /diagnosis                                                  Diagnosis.index

# Editor
GET /drawer                                                     Drawers.index
GET /drawer/modules/{name}/versions/{versionCode}/json          Drawers.module


# Index
GET /                                                           Dashboards.index

# Profile
GET /profile/{email}/edit                                       ProfileSinfonier.edit
POST /profile/{email}/save                                      ProfileSinfonier.save
POST /profile/{email}/changePassword                            ProfileSinfonier.changePassword

# APIClients
GET     /apiclients                                             404
POST    /apiclients/create                                      404
POST    /apiclients/remove                                      404
POST    /apiclients/edit/name                                   404
POST    /apiclients/renew/secret                                404

# Latch bugs
GET /latch/pair                                                 Latch.checkLatch

# Darwin
* /                                                             module:darwin

# Ignore favicon requests
GET /favicon.ico                                                404
GET /images/space.gif                                           staticFile:/public/javascripts/vendor/inputex/images/space.gif

# Map static resources from the /app/public folder to the /public path
GET /public/                                                    staticDir:public

# Catch all
* /{controller}/{action}                                        {controller}.{action}
